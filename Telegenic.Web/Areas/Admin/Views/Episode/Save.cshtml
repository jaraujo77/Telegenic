@using Telegenic.Entities.ViewModels;
@using Telegenic.Entities.Models;

@model vmEntity



<h2>@Model.PageHeading</h2>

@using (Html.BeginForm("Save", "Episode", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <fieldset>
        @Html.HiddenFor(m => m.Episode.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Episode.Title, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(model => model.Episode.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Episode.EpisodeNumber, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(model => model.Episode.EpisodeNumber, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Episode.Runtime, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(model => model.Episode.Runtime, new { htmlAttributes = new { @class = "form-control" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Episode.PlaceholderImagePath, new { @class = "col-sm-2 col-form-label" })
            @Html.EditorFor(model => model.Episode.PlaceholderImagePath, new { htmlAttributes = new { @class = "form-control", @placeholder = "Upload Placeholder Image" } })

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Episode.Rating, new { @class = "col-sm-2 col-form-label" })
            @Html.EnumDropDownListFor(x => x.Episode.Rating, "Select Rating", new { @class = "form-control" })

        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
        @Html.ActionLink("Cancel", "Index", "Episode", new { area = "Admin" }, new { @class = "btn btn-primary" })
    </fieldset>
}