@using Telegenic.Entities.ViewModels;
@using Telegenic.Entities.Models;


@model vmEntityList<Movie>

@{ var count = 0; }

<h2>@Model.PageHeading</h2>

<p>
    @Html.ActionLink("Create New", "Save")
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entities.FirstOrDefault().Title)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entities)
        {
            var rowClass = count % 2 == 0 ? "table-primary" : "table-secondary";
            count++;

            <tr class=@rowClass>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Title)
                </th>
                <td>
                    @Html.ActionLink("Edit", "Save", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
