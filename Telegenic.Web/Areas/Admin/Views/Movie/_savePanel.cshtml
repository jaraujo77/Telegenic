@using Telegenic.Entities.ViewModels;
@using Telegenic.Entities.Models;

@model vmEntity


@using (Html.BeginForm("Save", "Movie", FormMethod.Post, new { @name = "save_movie" }))
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
        <div class="panel-heading ">
            <h1 class="panel-title">@Model.PageHeading</h1>
        </div>
        <div class="panel-body">
            <fieldset>
                @Html.HiddenFor(m => m.Movie.Id)
                <div class="form-group">
                    @Html.LabelFor(model => model.Movie.Title, new { @class = "col-sm-2 col-form-label" })
                    @Html.EditorFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Title" } })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Movie.Genre.Name, new { @class = "col-sm-2 col-form-label" })
                    @Html.DropDownListFor(m => m.Movie.Genre.Id, Model.SelectListItems(Model.Genres, "Genre"), new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Movie.Runtime, new { @class = "col-sm-2 col-form-label" })
                    @Html.EditorFor(model => model.Movie.Runtime, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Movie.PlaceholderImagePath, new { @class = "col-sm-2 col-form-label" })
                    @Html.EditorFor(model => model.Movie.PlaceholderImagePath, new { htmlAttributes = new { @class = "form-control", @placeholder = "Upload Placeholder Image" } })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Movie.Rating, new { @class = "col-sm-2 col-form-label" })
                    @Html.EnumDropDownListFor(x => x.Movie.Rating, "Select Rating", new { @class = "form-control" })

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Movie.ElenaFriendly, new { @class = "col-sm-2 col-form-label" })
                    @Html.CheckBoxFor(m => m.Movie.ElenaFriendly, new { @class = "form-control" })
                </div>
                <button id="btnSubmit"
                        type="submit"
                        class="btn btn-primary"
                        data-action="save">
                    <i class="glyphicon glyphicon-ok"></i>
                    &nbsp;Submit
                </button>
                <a id="btnReset"
                   class="btn btn-primary"
                   href="@Url.Action("Index", "Movie", new { area = "Admin" })"
                   data-action="cancelSave">
                    <i class="glyphicon glyphicon-remove"></i>
                    &nbsp;Cancel
                </a>
            </fieldset>
        </div>
    </div>



}

