            <div class="panel-info">
                @Html.LabelFor(model => model.Movie.Title, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @Html.DisplayFor(m => m.Movie.Title, new { @class = "" })
                    </strong>
                </p>
            </div>

            <div class="panel-info">
                @Html.LabelFor(m => m.Movie.Genre.Name, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @Html.DisplayFor(m => m.Movie.Genre.Name, new { @class = "" })
                    </strong>
                </p>
            </div>
            <div class="panel-info">
                @Html.LabelFor(m => m.Movie.Runtime, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @Html.DisplayFor(m => m.Movie.Runtime, new { @class = "" })
                    </strong>
                </p>
            </div>
            <div class="panel-info">
                @Html.LabelFor(m => m.Movie.PlaceholderImagePath, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @Html.DisplayFor(m => m.Movie.PlaceholderImagePath, new { @class = "" })
                    </strong>
                </p>
            </div>
            <div class="panel-info">
                @Html.LabelFor(m => m.Movie.Rating, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @Html.DisplayFor(m => m.Movie.Rating, new { @class = "" })
                    </strong>
                </p>
            </div>
            <div class="panel-info">
                @Html.LabelFor(m => m.Movie.ElenaFriendly, new { @class = "" })
            </div>
            <div>
                <p>
                    <strong>
                        @( Model.Movie.ElenaFriendly ? "Yes" : "No")
