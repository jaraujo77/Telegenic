@using Telegenic.Entities.ViewModels;
@using Telegenic.Entities.Models;


@model vmEntityList<Season>

@{ var count = 0; }

<h2>@Model.PageHeading</h2>

<p>
    @Html.ActionLink("Create New", "Save", null, new { id = "btnEdit" })
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entities.FirstOrDefault().Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Entities.FirstOrDefault().Season_Number)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entities)
        {
            var rowClass = count % 2 == 0 ? "table-primary" : "table-secondary";
            count++;

            <tr class=@rowClass>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Title)
                </th>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Season_Number)
                </th>
                <td>
                    @Html.ActionLink("Edit", "Save", new { id = item.Id }, new { id = "btnEdit"}) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { id = "btnDelete"})
                </td>
            </tr>
        }
    </tbody>
</table>

