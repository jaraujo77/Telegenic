@using Telegenic.Entities.Models
@model IEnumerable<Season>

@{ 
    var count = 0;
}

    <div class="panel-body">
        <div class="panel-heading">
            @Html.ActionLink("Add New Season", "Save", "Season", new { _seasonId = 0, _seriesId = Model.FirstOrDefault<Season>().Series_Id }, new { id = "btnAdd" })
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Season_Number)
                    </th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var season in Model)
                {
                    var rowClass = count % 2 == 0 ? "table-primary" : "table-secondary";
                    count++;

                    <tr class=@rowClass>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => season.Title)
                        </th>
                        <th scope="row">
                            @Html.DisplayFor(modelItem => season.Season_Number)
                        </th>
                        <td>
                            @Html.ActionLink("Edit", "Save", "Season", new { _seasonId = season.Id, _seriesId = season.Series_Id }, new { id = "btnEdit" }) |
                            @Html.ActionLink("Delete", "Delete", "Season", new { _seasonId = season.Id, _seriesId = season.Series_Id }, new { id = "btnDelete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>