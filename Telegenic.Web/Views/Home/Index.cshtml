@using Telegenic.Entities.Interfaces
@model Telegenic.Web.Models.vmShow


<div class="page-header">
    <div class="row">
        <div class="col-lg-8 col-md-7, col-sm-6">
            <h1>Home</h1>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="bs-docs-section clearfix">

            <ul class="list-group">
                @foreach (var item in Model.FeaturedMovies)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @item.Title
                        <span class="badge badge-primary badge-pill">@item.Runtime.TotalMinutes </span>
                    </li>
                }

            </ul>
        </div>

    </div>
</div>




<div class="row">
    <div class="col-lg-4 col-md-3, col-sm-2">
        <div class="bs-docs-section clearfix">
            <ul class="list-group">
                @foreach (var item in Model.FeaturedSeries)
                {
                    <li class="">
                        @{ Html.RenderPartial("~/Views/Shared/Partials/_ListItem_Card_Image.cshtml", item); }
                    </li>
                            }
            </ul>
        </div>
    </div>
</div>


